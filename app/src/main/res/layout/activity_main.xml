<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!" />

    <LinearLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="#001C2243"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/home_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/home_selected" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="电影"
                android:textColor="#e8185e"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cinema"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cinema"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/cinema_normal" />

            <TextView
                android:id="@+id/tv_cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="电影"
                android:textColor="#e8185e"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/account_normal" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="电影"
                android:textColor="#e8185e"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>