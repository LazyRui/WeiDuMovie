<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".view.activity.BranchActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_left"/>
        
        <EditText
            android:id="@+id/et_branch"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_42"
            android:textCursorDrawable="@drawable/my_cursor"
            android:background="@drawable/home_shape"
            android:paddingLeft="@dimen/dp_15"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:id="@+id/rv_branch"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView
            android:src="@drawable/system_message"
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_164"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_23"
            android:text="没有相关搜索结果\n换个词试试吧"/>
    </LinearLayout>
</LinearLayout>