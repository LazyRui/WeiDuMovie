<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"

    tools:context=".view.activity.LoginActivity">

    <ImageView
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_360"
        android:src="@drawable/register_login_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_28"
            android:src="@drawable/back_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_317"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_nick_name"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/round_shape"
                android:hint="请输入昵称"
                android:padding="@dimen/dp_10"
                android:textColor="#eee"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/round_shape"
                android:hint="请输入邮箱账号"
                android:padding="@dimen/dp_10"
                android:textColor="#eee"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/round_shape"
                android:hint="请设置密码"
                android:padding="@dimen/dp_10"
                android:textColor="#eee"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_email_code"
                    android:layout_width="@dimen/dp_312"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/round_shape"
                    android:hint="请输入验证码"
                    android:padding="@dimen/dp_10"
                    android:textColor="#eee"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/but_cik"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_44"
                    android:background="#fff"
                    android:layout_alignParentRight="true"
                    android:text="获取验证码"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:id="@+id/tv_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已有账号 立即登录"
                android:textColor="#999999" />
        </RelativeLayout>
            <Button
                android:id="@+id/but_register"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/log_shape"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

        <!--<EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="password" />

        <Button
            android:id="@+id/but_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"/>-->
    </LinearLayout>



</RelativeLayout>