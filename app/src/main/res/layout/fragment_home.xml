<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_14">

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_26"
                android:src="@drawable/home_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_address"
                android:text="北京"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_branch"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_27"
                android:src="@drawable/home_search" />

        </RelativeLayout>

        <com.stx.xhb.androidx.XBanner
            android:id="@+id/home_banner"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_150"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_h_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_h_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/4"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_homt_hot"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/home_hot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_homt_hot"
                android:text="正在热映"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_24"
                android:text="更多"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </RelativeLayout>
        <!--            dp226-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_release_movie"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20" />

        <RelativeLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_homt_soon"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/home_soon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_homt_soon"
                android:text="即将上映"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_24"
                android:text="更多"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ComingSoon_movie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_226"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20" />

        <RelativeLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_homt_popular"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/home_popular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_homt_popular"
                android:text="热门电影"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_24"
                android:text="更多"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </RelativeLayout>
        <include layout="@layout/item_hot_movie_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/rv_hot_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>